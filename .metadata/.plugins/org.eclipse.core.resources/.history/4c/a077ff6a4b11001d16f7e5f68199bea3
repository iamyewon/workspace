package project81;

public class SmartPhoneMonitor implements Monitor {
	boolean power;
	int vol;
	float monitorSize;
	int brightness;
	
	@Override
	public void turnOn() {
		System.out.println("휴대폰 전원이 켜집니다.");
		power = true;
	}

	@Override
	public void turnOff() {
		System.out.println("휴대폰 전원이 꺼집니다.");
		power = false;
	}
	
	public void volUp() {
		System.out.println("볼륨을 높입니다.");
		vol++;
	}
	
	public void volDown() {
		System.out.println("볼륨을 낮춥니다");
		vol--;
	}
	
	public void checkMonitorSize() {
		monitorSize = 6.1;
		System.out.println("해상도는"+monitorSize+"입니다.");
	}
	public void checkBrightness() {
		brightness = 90;
		System.out.println("밝기는"+brightness+"%입니다.");
	}

	public static void main(String[] args) {
		TVMonitor tvm = new TVMonitor();
		tvm.turnOn();
		tvm.turnOff();
		tvm.volUp();
		tvm.volDown();
		tvm.checkResolution();
		tvm.checkBrightness();
	}
	
}
