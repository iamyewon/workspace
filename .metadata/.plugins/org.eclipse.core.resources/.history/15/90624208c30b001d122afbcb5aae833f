package project725;
import java.awt.FlowLayout;
import java.awt.GridLayout;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class GUIPractice2 {
	public static void main(String[] args) {
		JFrame f = new JFrame(); 
		GridLayout fgl = new GridLayout(0,1);
		GridLayout pnlgl = new GridLayout(1,2);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		f.setSize(500, 700);
		f.setLayout(fgl);
		
		
		JPanel pnl1 = new JPanel();
		JLabel lbl1 = new JLabel("회원가입");
		pnl1.add(lbl1);
		
		JPanel pnl2 = new JPanel();
		pnl2.setLayout(pnlgl);
		JLabel lbl2 = new JLabel("아이디");
		JTextField tf2 = new JTextField(20);
		pnl2.add(lbl2);
		pnl2.add(tf2);
		
		JPanel pnl3 = new JPanel();
		pnl3.setLayout(pnlgl);
		JLabel lbl3 = new JLabel("이름");
		JTextField tf3 = new JTextField(20);
		pnl3.add(lbl3);
		pnl3.add(tf3);
		
		JPanel pnl4 = new JPanel();
		pnl4.setLayout(pnlgl);
		JLabel lbl4 = new JLabel("이름");
		JTextField tf4 = new JTextField(20);
		pnl4.add(lbl4);
		pnl4.add(tf4);
		
		
		
		
		f.add(pnl1);
		f.add(pnl2);
		f.add(pnl3);
		f.add(pnl4);
		f.setVisible(true);
	}
}
