package project719;

public class Vending {
		
		void calcChange(String drink, int money) {
		if(drink.equals("코카콜라")) { //1000
			System.out.println(drink+" 잔돈 "+(money-1000));
		}else if(drink.equals("칠성사이다")) { //900
			System.out.println(drink+" 잔돈 "+(money-900));
		}else if(drink.equals("펩시콜라")) { //800
			System.out.println(drink+" 잔돈 "+(money-800));
		}else if(drink.equals("환타")) { //850
			System.out.println(drink+" 잔돈 "+(money-850));
		}else if(drink.equals("제로코카콜라")) { //1100
			System.out.println(drink+" 잔돈 "+(money-1100));
		}else if(drink.equals("삼다수")) { //400
			System.out.println(drink+" 잔돈 "+(money-400));
		}else if(drink.equals("포카리스웨트")) { //950
			System.out.println(drink+" 잔돈 "+(money-950));
		}else {
			System.out.println("없는 음료 입니다.");
		}
	}
	
	
	
	public static void main(String[] args) {
		Vending machine = new Vending();
		machine.calcChange("코카콜라", 10000);
		machine.calcChange("칠성사이다", 10000);
		machine.calcChange("펩시콜라", 10000);
		machine.calcChange("환타", 10000);
		machine.calcChange("제로코카콜라", 10000);
		machine.calcChange("삼다수", 10000);
		machine.calcChange("포카리스웨트", 10000);
	}
	
	
}
