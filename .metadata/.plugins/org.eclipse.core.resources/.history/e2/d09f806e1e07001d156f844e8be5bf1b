package project719;

public class Product2 { // 클래스 - 객체를 코드화 시킨것. 
	 String productName; // 정보
	 int productPrice, productWeight, productStock;
	
	 public Product2() {//new 할때 실행됨.
		 
	 }
	 public Product2(String productName,int productPrice,int productWeight,int productStock ) {//new 할때 실행됨.
		 this.productName = productName;
		 this.productWeight = productWeight;
		 this.productPrice = productPrice;
		 this.productStock = productStock;
	 }
	
	 void plusStock() { //1번 실행 할때마다 하나씩 증가. 여러개면 괄호에 넣어야하는데 하나라서 비움.
		 productStock++;
	 }
	 void minusStock() {
		 productStock--;
	 }
	 
	 void printProduct() {
		 System.out.print("제품명:"+productName);
		 System.out.print("가격:"+productPrice);
		 System.out.print("무게:"+productWeight);
		 System.out.println("재고:"+productStock);
	 }
	 
	 
//	public void setProductName(String productName) {
//		//권한 추가할 수 있음 .. 제어 할수있음.			
//		this.productName = productName;}


// 이 메인은 이클래스를 만들때 테스트용으로 씀. 완성되면 지워주면 좋음.
	public static void main(String[] args) {
		Product2 p = new Product2();
		p.setProductName("하리보 골드베렌");
		p.setProductWeight("100g");
		p.setProductPrice(2000);
		p.setProductStock(7);
		p.printProductInfo();
		
		Product2 p2 = new Product2();
		p2.setProductName("하리보 스타믹스");
		p2.setProductWeight("150g");
		p2.setProductPrice(2500);
		p2.setProductStock(11);
		p2.printProductInfo();
		
		Product2 p3 = new Product2();
		p3.setProductName("하리보 해피그레이프");
		p3.setProductWeight("300g");
		p3.setProductPrice(3500);
		p3.setProductStock(4);
		p3.printProductInfo();
		

	}
}
