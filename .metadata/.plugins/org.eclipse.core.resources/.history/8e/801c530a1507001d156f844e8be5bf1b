package project719;

public class Order {
	Product product;
	User user;
	int orderNum;
	int allPrice;
	
	public Order(Product product, User user, int orderNum, int allPrice) {
		this.product=product;
		this.user=user;
		this.orderNum=orderNum;
		this.allPrice=allPrice;
	}
	
	public void printProductInfo() {
		product.printProductInfo();
		System.out.println("주문 수량은 "+orderNum+"개 이고, 총 가격은 "+allPrice+"원 입니다.");
	}
	
	public static void main(String[] args) {
		Order o = new Order(new Product(),new User(),2,5000);
		o.printProductInfo();
	}
	
	
}
